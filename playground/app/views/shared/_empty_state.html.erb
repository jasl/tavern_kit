<%# Shared empty state card %>
<%# locals: icon:, title:, description:, action: nil, wrapper_tag: :div, wrapper_class: nil %>

<%
  wrapper_tag ||= :div
  wrapper_class ||= "card bg-base-100 p-12 text-center"
%>

<%= tag.public_send(wrapper_tag, class: wrapper_class) do %>
  <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-base-200 mx-auto mb-4">
    <span class="icon-[lucide--<%= icon.to_s %>] size-8 text-base-content/40"></span>
  </div>

  <h3 class="text-lg font-medium mb-2"><%= title %></h3>
  <p class="text-base-content/60 mb-6"><%= description %></p>

  <% if action.present? %>
    <%= link_to action.fetch(:path),
                class: action.fetch(:class, "btn btn-primary gap-2"),
                data: action.fetch(:data, {}) do %>
      <% if action[:icon].present? %>
        <span class="icon-[lucide--<%= action[:icon].to_s %>] size-4"></span>
      <% end %>
      <%= action.fetch(:label) %>
    <% end %>
  <% end %>
<% end %>
