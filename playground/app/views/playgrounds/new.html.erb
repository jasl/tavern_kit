<% content_for :title, t("playgrounds.new.title", default: "New Playground") %>
<% content_for :main_class, "flex-1 p-4 md:p-6 lg:p-8" %>

<div class="max-w-2xl mx-auto">
  <div class="card bg-base-100 shadow-lg">
    <div class="card-body">
      <h1 class="card-title text-2xl mb-4 flex items-center gap-3">
        <span class="icon-[lucide--message-circle-plus] size-7 text-primary"></span>
        <%= t("playgrounds.new.title", default: "New Playground") %>
      </h1>

      <p class="text-base-content/60 mb-6">
        <%= t("playgrounds.new.description", default: "Create a playground to chat with AI characters.") %>
      </p>

      <%= render "form", playground: @playground, characters: @characters %>
    </div>
  </div>
</div>
