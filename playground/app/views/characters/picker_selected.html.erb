<%# Character Picker - Selected summary Turbo Frame response %>
<%# Rendered without layout for Turbo Frame updates %>

<%= turbo_frame_tag "character_picker_selected" do %>
  <% if @characters.any? %>
    <div class="max-h-56 overflow-y-auto pr-1 space-y-2">
      <% @characters.each do |character| %>
        <%= render "shared/character_picker_selected_item", character: character %>
      <% end %>
    </div>
  <% else %>
    <div class="py-2 text-center text-sm text-base-content/50">
      <div><%= t("characters.picker.none_selected", default: "No characters selected yet") %></div>
      <div class="text-xs mt-1"><%= t("characters.picker.none_selected_hint", default: "Choose from the list below") %></div>
    </div>
  <% end %>
<% end %>
