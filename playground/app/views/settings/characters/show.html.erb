<% content_for :title, @character.name %>

<div class="space-y-6">
  <!-- Breadcrumbs -->
  <div class="breadcrumbs text-sm">
    <ul>
      <li>
        <%= link_to settings_characters_path do %>
          <span class="icon-[lucide--users] size-4 mr-1"></span>
          <%= t("characters.index.title", default: "Characters") %>
        <% end %>
      </li>
      <li><%= @character.name.truncate(30) %></li>
    </ul>
  </div>

  <%# Header card with portrait and basic info %>
  <div class="card bg-base-100 shadow-sm border border-base-300">
    <div class="card-body">
      <div class="flex flex-col sm:flex-row gap-6">
        <%# Portrait %>
        <div class="shrink-0">
          <figure class="w-32 h-44 relative overflow-hidden rounded-xl bg-base-200">
            <%= image_tag fresh_character_portrait_path(@character),
                          class: "w-full h-full object-cover",
                          alt: @character.name %>
            <%# Version badge %>
            <div class="absolute top-2 right-2">
              <span class="badge badge-sm <%= @character.v3? ? 'badge-primary' : 'badge-secondary' %>">
                <%= @character.v3? ? "CCv3" : "CCv2" %>
              </span>
            </div>
          </figure>
        </div>

        <%# Info %>
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl font-bold"><%= @character.name %></h1>
          <% if @character.nickname.present? %>
            <p class="text-base-content/60 mt-1"><%= @character.nickname %></p>
          <% end %>

          <%# Metadata %>
          <div class="flex flex-wrap gap-3 text-sm text-base-content/50 mt-3">
            <% if @character.creator.present? %>
              <div class="flex items-center gap-1">
                <span class="icon-[lucide--pen-tool] size-4"></span>
                <span><%= @character.creator %></span>
              </div>
            <% end %>
            <% if @character.character_version.present? %>
              <div class="flex items-center gap-1">
                <span class="icon-[lucide--git-branch] size-4"></span>
                <span><%= @character.character_version %></span>
              </div>
            <% end %>
          </div>

          <%# Tags %>
          <% if @character.tags.any? %>
            <div class="flex flex-wrap gap-1 mt-4">
              <% @character.tags.each do |tag| %>
                <span class="badge badge-sm badge-outline"><%= tag %></span>
              <% end %>
            </div>
          <% end %>

          <%# Actions %>
          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-base-200">
            <%# Edit button %>
            <%= link_to edit_settings_character_path(@character),
                        class: "btn btn-sm btn-primary gap-2" do %>
              <span class="icon-[lucide--pencil] size-4"></span>
              <%= t("characters.actions.edit", default: "Edit") %>
            <% end %>

            <%# Export dropdown %>
            <div class="dropdown dropdown-end">
              <div tabindex="0" role="button" class="btn btn-sm btn-outline gap-2">
                <span class="icon-[lucide--download] size-4"></span>
                <%= t("characters.show.export") %>
              </div>
              <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-50 w-48 p-2 shadow-lg border border-base-300">
                <li>
                  <%= link_to "#", class: "gap-2", data: { turbo: false } do %>
                    <span class="icon-[lucide--file-json] size-4"></span>
                    JSON
                  <% end %>
                </li>
                <li>
                  <%= link_to "#", class: "gap-2", data: { turbo: false } do %>
                    <span class="icon-[lucide--image] size-4"></span>
                    PNG
                  <% end %>
                </li>
                <li>
                  <%= link_to "#", class: "gap-2", data: { turbo: false } do %>
                    <span class="icon-[lucide--archive] size-4"></span>
                    CharX
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Description %>
  <% if @character.description.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--scroll-text] size-5 text-primary"></span>
          <%= t("characters.show.description") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.description_hint", default: "The character's background, appearance, and defining traits.") %>
        </p>
        <div class="prose prose-sm max-w-none">
          <p class="whitespace-pre-wrap"><%= @character.description %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Personality %>
  <% if @character.personality.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--brain] size-5 text-secondary"></span>
          <%= t("characters.show.personality") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.personality_hint", default: "Key personality traits that define how the character behaves.") %>
        </p>
        <div class="prose prose-sm max-w-none">
          <p class="whitespace-pre-wrap"><%= @character.personality %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Scenario %>
  <% if @character.scenario.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--map] size-5 text-accent"></span>
          <%= t("characters.show.scenario") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.scenario_hint", default: "The setting or situation for conversations with this character.") %>
        </p>
        <div class="prose prose-sm max-w-none">
          <p class="whitespace-pre-wrap"><%= @character.scenario %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%# First message %>
  <% if @character.first_mes.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--message-circle] size-5 text-info"></span>
          <%= t("characters.show.first_message") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.first_message_hint", default: "The character's opening message when starting a new conversation.") %>
        </p>
        <div class="chat chat-start">
          <div class="chat-image avatar">
            <div class="w-10 rounded-full bg-base-200">
              <%= image_tag fresh_character_portrait_path(@character), class: "w-full h-full object-cover" %>
            </div>
          </div>
          <div class="chat-header">
            <%= @character.name %>
          </div>
          <div class="chat-bubble chat-bubble-primary whitespace-pre-wrap"><%= @character.first_mes %></div>
        </div>

        <%# Alternate greetings %>
        <% if @character.alternate_greetings.any? %>
          <div class="divider text-xs text-base-content/50"><%= t("characters.show.alternate_greetings", count: @character.alternate_greetings.size) %></div>
          <p class="text-sm text-base-content/60 mb-2">
            <%= t("characters.show.alternate_greetings_hint", default: "Alternative opening messages that can be randomly selected.") %>
          </p>
          <div class="collapse collapse-arrow bg-base-200/50 rounded-lg">
            <input type="checkbox" />
            <div class="collapse-title text-sm font-medium">
              <%= t("characters.show.view_alternates") %>
            </div>
            <div class="collapse-content space-y-3">
              <% @character.alternate_greetings.each_with_index do |greeting, index| %>
                <div class="chat chat-start">
                  <div class="chat-header text-xs">
                    <%= t("characters.show.greeting_number", number: index + 2) %>
                  </div>
                  <div class="chat-bubble chat-bubble-secondary whitespace-pre-wrap text-sm">
                    <%= greeting %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# System prompt %>
  <% if @character.system_prompt.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--terminal] size-5 text-warning"></span>
          <%= t("characters.show.system_prompt") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.system_prompt_hint", default: "Instructions for the AI model about how to portray this character.") %>
        </p>
        <div class="mockup-code text-xs bg-base-200">
          <pre><code class="whitespace-pre-wrap"><%= @character.system_prompt %></code></pre>
        </div>
      </div>
    </div>
  <% end %>

  <%# Creator notes %>
  <% if @character.creator_notes.present? %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <h3 class="card-title text-base gap-2">
          <span class="icon-[lucide--sticky-note] size-5 text-success"></span>
          <%= t("characters.show.creator_notes") %>
        </h3>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.creator_notes_hint", default: "Notes from the character creator about usage, tips, or backstory.") %>
        </p>
        <div class="prose prose-sm max-w-none">
          <p class="whitespace-pre-wrap"><%= @character.creator_notes %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Character book / Embedded Lorebook %>
  <% if @character.character_book.present? %>
    <% book_data = @character.character_book.with_indifferent_access %>
    <% entries_data = book_data[:entries] || {} %>
    <% entries_count = entries_data.is_a?(Hash) ? entries_data.size : entries_data.size %>
    <div class="card bg-base-100 shadow-sm border border-base-300">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <h3 class="card-title text-base gap-2">
            <span class="icon-[lucide--book-open] size-5 text-error"></span>
            <%= t("characters.show.lorebook") %>
          </h3>
          <div class="flex gap-2">
            <button type="button" class="btn btn-ghost btn-sm gap-1" onclick="document.getElementById('character_lorebook_modal').showModal()">
              <span class="icon-[lucide--eye] size-4"></span>
              <%= t("characters.show.view_entries", default: "View") %>
            </button>
          </div>
        </div>
        <p class="text-sm text-base-content/60 -mt-2 mb-2">
          <%= t("characters.show.lorebook_hint", default: "World Info entries embedded with this character for context injection.") %>
        </p>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mt-3">
          <div class="stat bg-base-200 rounded-lg p-3">
            <div class="stat-title text-xs"><%= t("characters.show.entries", default: "Entries") %></div>
            <div class="stat-value text-lg"><%= entries_count %></div>
          </div>
          <% if book_data[:recursiveScanning] || book_data[:recursive_scanning] %>
            <div class="stat bg-base-200 rounded-lg p-3">
              <div class="stat-title text-xs"><%= t("characters.show.recursive", default: "Recursive") %></div>
              <div class="stat-value text-lg flex items-center">
                <span class="icon-[lucide--check] size-5 text-success"></span>
              </div>
            </div>
          <% end %>
          <% scan_depth = book_data[:scanDepth] || book_data[:scan_depth] %>
          <% if scan_depth.present? %>
            <div class="stat bg-base-200 rounded-lg p-3">
              <div class="stat-title text-xs"><%= t("characters.show.scan_depth", default: "Scan Depth") %></div>
              <div class="stat-value text-lg"><%= scan_depth %></div>
            </div>
          <% end %>
          <% token_budget = book_data[:tokenBudget] || book_data[:token_budget] %>
          <% if token_budget.present? %>
            <div class="stat bg-base-200 rounded-lg p-3">
              <div class="stat-title text-xs"><%= t("characters.show.token_budget", default: "Budget") %></div>
              <div class="stat-value text-lg"><%= number_with_delimiter(token_budget) %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Character Lorebook Entries Modal %>
    <dialog id="character_lorebook_modal" class="modal">
      <div class="modal-box max-w-4xl max-h-[85vh]">
        <form method="dialog">
          <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">
            <span class="icon-[lucide--x] size-4"></span>
          </button>
        </form>
        <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
          <span class="icon-[lucide--book-open] size-5 text-error"></span>
          <%= @character.name %> - <%= t("characters.show.lorebook") %>
        </h3>
        <div class="overflow-y-auto max-h-[60vh] space-y-2">
          <% entries_list = entries_data.is_a?(Hash) ? entries_data.values : entries_data %>
          <% entries_list.sort_by { |e| e["order"] || e[:order] || e["insertion_order"] || e[:insertion_order] || 0 }.reverse.each do |entry| %>
            <% entry = entry.with_indifferent_access %>
            <% entry_enabled = entry[:enabled] != false %>
            <div class="collapse collapse-arrow bg-base-200 <%= entry_enabled ? '' : 'opacity-50' %>">
              <input type="checkbox" />
              <div class="collapse-title text-sm font-medium flex items-center gap-2">
                <% if entry[:constant] %>
                  <span class="badge badge-xs badge-warning">C</span>
                <% end %>
                <span class="flex-1 truncate">
                  <%= entry[:comment] || entry[:memo] || (entry[:key] || entry[:keys])&.first(3)&.join(", ")&.truncate(40) || "Entry" %>
                </span>
                <span class="badge badge-xs badge-ghost">
                  <%= entry[:order] || entry[:insertion_order] || 100 %>
                </span>
              </div>
              <div class="collapse-content text-sm">
                <div class="space-y-2">
                  <%# Keys %>
                  <div class="flex flex-wrap gap-1">
                    <% keys = entry[:key] || entry[:keys] || [] %>
                    <% Array(keys).each do |key| %>
                      <span class="badge badge-sm <%= key.to_s.start_with?('/') ? 'badge-secondary' : 'badge-primary' %>">
                        <%= key.to_s.truncate(30) %>
                      </span>
                    <% end %>
                  </div>
                  <%# Content preview %>
                  <% if entry[:content].present? %>
                    <div class="bg-base-100 rounded-lg p-2 text-xs font-mono whitespace-pre-wrap max-h-32 overflow-y-auto">
                      <%= entry[:content] %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="modal-action">
          <form method="dialog">
            <button class="btn btn-ghost"><%= t("common.close", default: "Close") %></button>
          </form>
        </div>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button>close</button>
      </form>
    </dialog>
  <% end %>

  <!-- Danger Zone -->
  <div class="card bg-base-100 shadow-sm border border-error/30">
    <div class="card-body">
      <h3 class="card-title text-error">
        <span class="icon-[lucide--alert-triangle] size-5"></span>
        <%= t("characters.danger_zone", default: "Danger Zone") %>
      </h3>
      <p class="text-base-content/60 text-sm"><%= t("characters.danger_description", default: "Once you delete a character, there is no going back. Please be certain.") %></p>
      <div class="card-actions mt-4">
        <%= button_to settings_character_path(@character),
            method: :delete,
            class: "btn btn-error btn-outline gap-2",
            data: { turbo_confirm: t("characters.destroy.confirm", name: @character.name) } do %>
          <span class="icon-[lucide--trash-2] size-4"></span>
          <%= t("characters.actions.delete") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
