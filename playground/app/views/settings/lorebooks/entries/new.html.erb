<% content_for :title, t("lorebook_entries.new_title", default: "New Entry") %>

<div class="space-y-6">
  <!-- Breadcrumbs -->
  <div class="breadcrumbs text-sm">
    <ul>
      <li>
        <%= link_to settings_lorebooks_path do %>
          <span class="icon-[lucide--book-open] size-4 mr-1"></span>
          <%= t("lorebooks.title", default: "Lorebooks") %>
        <% end %>
      </li>
      <li>
        <%= link_to @lorebook.name, edit_settings_lorebook_path(@lorebook) %>
      </li>
      <li><%= t("lorebook_entries.new", default: "New Entry") %></li>
    </ul>
  </div>

  <!-- Back button -->
  <%= link_to edit_settings_lorebook_path(@lorebook), class: "btn btn-ghost btn-sm gap-2 -mt-4 mb-2" do %>
    <span class="icon-[lucide--arrow-left] size-4"></span>
    <%= t("common.back_to_lorebook", default: "Back to Lorebook") %>
  <% end %>

  <!-- Header -->
  <div>
    <h1 class="text-2xl font-bold"><%= t("lorebook_entries.new_title", default: "New Entry") %></h1>
    <p class="text-base-content/60 mt-1">
      <%= t("lorebook_entries.new_description", default: "Add a new entry to %{lorebook}") % { lorebook: @lorebook.name } %>
    </p>
  </div>

  <!-- Form -->
  <%= render "form", entry: @entry, lorebook: @lorebook %>
</div>
