<% content_for :title, t("lorebooks.title", default: "Lorebooks") %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-3">
        <span class="icon-[lucide--book-open] size-7 text-primary"></span>
        <%= t("lorebooks.title", default: "Lorebooks") %>
      </h1>
      <p class="text-base-content/60 mt-1">
        <%= t("lorebooks.subtitle", default: "Manage World Info files for your characters and spaces") %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <button type="button"
              class="btn btn-outline gap-2"
              data-controller="dialog"
              data-dialog-id-value="import_modal"
              data-action="click->dialog#open">
        <span class="icon-[lucide--upload] size-4"></span>
        <%= t("lorebooks.import", default: "Import") %>
      </button>
      <%= link_to new_settings_lorebook_path, class: "btn btn-primary gap-2" do %>
        <span class="icon-[lucide--plus] size-4"></span>
        <%= t("lorebooks.new", default: "New Lorebook") %>
      <% end %>
    </div>
  </div>

  <!-- Filter Bar -->
  <%= render "shared/filter_bar",
             path: :settings_lorebooks_path,
             show_search: true,
             search_placeholder: t("lorebooks.search_placeholder", default: "Search by name...") %>

  <!-- Lorebooks List -->
  <div class="space-y-4">
    <% if @page.records.any? %>
      <% @page.records.each do |lorebook| %>
        <%= render "lorebook_card", lorebook: lorebook %>
      <% end %>

      <%# Pagination %>
      <%= render "shared/pagination", page: @page, path_helper: :settings_lorebooks_path, path_params: { filter: params[:filter], q: params[:q] } %>
    <% else %>
      <div class="card bg-base-200 p-8 text-center">
        <span class="icon-[lucide--book-open] size-16 text-base-content/20 mx-auto mb-4"></span>
        <h3 class="text-lg font-medium text-base-content/60">
          <%= t("lorebooks.empty_title", default: "No lorebooks yet") %>
        </h3>
        <p class="text-base-content/40 max-w-md mx-auto mt-2">
          <%= t("lorebooks.empty_description", default: "Create a new lorebook or import a SillyTavern World Info JSON file to get started.") %>
        </p>
        <div class="flex justify-center gap-2 mt-4">
          <button type="button"
                  class="btn btn-outline gap-2"
                  data-controller="dialog"
                  data-dialog-id-value="import_modal"
                  data-action="click->dialog#open">
            <span class="icon-[lucide--upload] size-4"></span>
            <%= t("lorebooks.import", default: "Import") %>
          </button>
          <%= link_to new_settings_lorebook_path, class: "btn btn-primary gap-2" do %>
            <span class="icon-[lucide--plus] size-4"></span>
            <%= t("lorebooks.new", default: "New Lorebook") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Import Modal %>
<dialog id="import_modal" class="modal">
  <div class="modal-box max-w-xl" data-controller="lorebook-import">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
      <span class="icon-[lucide--upload] size-5 text-primary"></span>
      <%= t("lorebooks.import_title", default: "Import World Info") %>
    </h3>

    <%= form_with url: import_settings_lorebooks_path, method: :post, multipart: true, class: "space-y-4", data: { action: "submit->lorebook-import#submitStart" } do |f| %>
      <%# Dropzone %>
      <div class="border-2 border-dashed border-base-300 rounded-lg p-8 text-center cursor-pointer hover:border-primary hover:bg-base-200/50 transition-colors"
           data-lorebook-import-target="zone"
           data-action="click->lorebook-import#click dragover->lorebook-import#dragover dragenter->lorebook-import#dragenter dragleave->lorebook-import#dragleave drop->lorebook-import#drop">

        <%# Idle state %>
        <div data-lorebook-import-target="idle">
          <span class="icon-[lucide--cloud-upload] size-12 text-base-content/30 mx-auto mb-3"></span>
          <p class="text-base-content/60">
            <%= t("lorebooks.import_drop_hint", default: "Drop a preset file here or click to browse") %>
          </p>
          <p class="text-base-content/40 text-xs mt-2">
            <%= t("lorebooks.import_formats", default: "Supports JSON format (SillyTavern World Info)") %>
          </p>
        </div>

        <%# Uploading state %>
        <div data-lorebook-import-target="uploading" class="hidden">
          <span class="loading loading-spinner loading-lg text-primary mb-3"></span>
          <p class="text-base-content/60"><%= t("common.importing", default: "Importing...") %></p>
        </div>

        <input type="file"
               name="file"
               accept=".json,application/json"
               class="hidden"
               data-lorebook-import-target="input"
               data-action="change->lorebook-import#fileSelected">
      </div>

      <%# File info (shown after file selection) %>
      <div data-lorebook-import-target="fileInfo" class="hidden">
        <div class="alert bg-base-200">
          <span class="icon-[lucide--file-json] size-8 text-primary"></span>
          <div class="flex-1">
            <div class="font-medium" data-lorebook-import-target="fileName"></div>
            <div class="text-xs text-base-content/60" data-lorebook-import-target="fileSize"></div>
          </div>
          <button type="button" class="btn btn-sm btn-ghost btn-circle" data-action="click->lorebook-import#clearFile">
            <span class="icon-[lucide--x] size-4"></span>
          </button>
        </div>
      </div>

      <%# Optional name input %>
      <div class="form-control">
        <label class="label py-1">
          <span class="label-text font-medium"><%= t("lorebooks.import_name", default: "Name (optional)") %></span>
        </label>
        <input type="text"
               name="name"
               class="input input-bordered w-full"
               placeholder="<%= t("lorebooks.import_name_placeholder", default: "Leave blank to use name from file") %>"
               data-lorebook-import-target="nameInput">
      </div>

      <div class="modal-action">
        <button type="button" class="btn btn-ghost" data-controller="dialog" data-action="click->dialog#close">
          <%= t("common.cancel", default: "Cancel") %>
        </button>
        <button type="submit" class="btn btn-primary gap-2" data-lorebook-import-target="submitBtn" disabled>
          <span class="icon-[lucide--upload] size-4"></span>
          <%= t("lorebooks.import", default: "Import") %>
        </button>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
