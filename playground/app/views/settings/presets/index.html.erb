<% content_for :title, t("presets.title", default: "Presets") %>

<div class="space-y-6" data-controller="preset-import">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-3">
        <span class="icon-[lucide--sliders-horizontal] size-7 text-primary"></span>
        <%= t("presets.title", default: "Presets") %>
      </h1>
      <p class="text-base-content/60 mt-1">
        <%= t("presets.subtitle", default: "Manage LLM generation and prompt settings presets") %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <button type="button" class="btn btn-ghost gap-2" onclick="document.getElementById('settings_preset_import_modal').showModal()">
        <span class="icon-[lucide--upload] size-4"></span>
        <%= t("presets.import", default: "Import") %>
      </button>
      <%= link_to new_settings_preset_path, class: "btn btn-primary gap-2" do %>
        <span class="icon-[lucide--plus] size-4"></span>
        <%= t("presets.new", default: "New Preset") %>
      <% end %>
    </div>
  </div>

  <%# Import Modal %>
  <dialog id="settings_preset_import_modal" class="modal">
    <div class="modal-box max-w-xl">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
      </form>
      <h3 class="font-bold text-lg mb-4">
        <span class="icon-[lucide--upload] size-5 mr-2"></span>
        <%= t("presets.import_title", default: "Import Preset") %>
      </h3>

      <%= form_with url: import_settings_presets_path, method: :post, multipart: true, class: "space-y-4" do |f| %>
        <div class="border-2 border-dashed border-base-300 rounded-lg p-8 text-center cursor-pointer hover:border-primary hover:bg-base-200/50 transition-colors"
             data-preset-import-target="dropzone"
             data-action="click->preset-import#openFilePicker dragover->preset-import#dragOver dragenter->preset-import#dragEnter dragleave->preset-import#dragLeave drop->preset-import#drop">
          <span class="icon-[lucide--file-json] size-12 text-base-content/30 mx-auto mb-3"></span>
          <p class="text-base-content/60 text-sm">
            <%= t("presets.import_hint", default: "Drag & drop a JSON file here, or click to select") %>
          </p>
          <p class="text-base-content/40 text-xs mt-2">
            <%= t("presets.import_formats", default: "Supports: TavernKit native, SillyTavern OpenAI format") %>
          </p>
          <input type="file"
                 name="file"
                 accept=".json,application/json"
                 class="hidden"
                 data-preset-import-target="fileInput"
                 data-action="change->preset-import#fileSelected">
        </div>
        <div data-preset-import-target="fileInfo" class="hidden alert alert-info">
          <span class="icon-[lucide--file] size-4"></span>
          <span data-preset-import-target="fileName"></span>
        </div>
        <div class="modal-action">
          <button type="submit" class="btn btn-primary gap-2" data-preset-import-target="submitBtn" disabled>
            <span class="icon-[lucide--upload] size-4"></span>
            <%= t("presets.import_submit", default: "Import") %>
          </button>
          <button type="button" class="btn btn-ghost" onclick="document.getElementById('settings_preset_import_modal').close()">
            <%= t("common.cancel", default: "Cancel") %>
          </button>
        </div>
      <% end %>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>

  <!-- Filter Bar -->
  <%= render "shared/filter_bar",
             path: :settings_presets_path,
             show_search: true,
             search_placeholder: t("presets.search_placeholder", default: "Search by name...") %>

  <!-- Presets List -->
  <div class="space-y-4">
    <% if @page.records.any? %>
      <% @page.records.each do |preset| %>
        <%= render "preset_card", preset: preset, default_preset: @default_preset %>
      <% end %>

      <%# Pagination %>
      <%= render "shared/pagination", page: @page, path_helper: :settings_presets_path, path_params: { filter: params[:filter], q: params[:q] } %>
    <% else %>
      <div class="card bg-base-200 p-8 text-center">
        <span class="icon-[lucide--sliders-horizontal] size-16 text-base-content/20 mx-auto mb-4"></span>
        <h3 class="text-lg font-medium text-base-content/60">
          <%= t("presets.empty_title", default: "No presets yet") %>
        </h3>
        <p class="text-base-content/40 max-w-md mx-auto mt-2">
          <%= t("presets.empty_description", default: "Create a new preset to save your LLM settings.") %>
        </p>
        <div class="flex justify-center gap-2 mt-4">
          <%= link_to new_settings_preset_path, class: "btn btn-primary gap-2" do %>
            <span class="icon-[lucide--plus] size-4"></span>
            <%= t("presets.new", default: "New Preset") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
