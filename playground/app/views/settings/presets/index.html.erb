<% content_for :title, t("presets.title", default: "Presets") %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-3">
        <span class="icon-[lucide--sliders-horizontal] size-7 text-primary"></span>
        <%= t("presets.title", default: "Presets") %>
      </h1>
      <p class="text-base-content/60 mt-1">
        <%= t("presets.subtitle", default: "Manage LLM generation and prompt settings presets") %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <button type="button"
              class="btn btn-outline gap-2"
              data-controller="dialog"
              data-dialog-id-value="settings_preset_import_modal"
              data-action="click->dialog#open">
        <span class="icon-[lucide--upload] size-4"></span>
        <%= t("presets.import", default: "Import") %>
      </button>
      <%= link_to new_settings_preset_path, class: "btn btn-primary gap-2" do %>
        <span class="icon-[lucide--plus] size-4"></span>
        <%= t("presets.new", default: "New Preset") %>
      <% end %>
    </div>
  </div>

  <%# Import Modal with Dropzone %>
  <dialog id="settings_preset_import_modal" class="modal">
    <div class="modal-box">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">
          <span class="icon-[lucide--x] size-4"></span>
        </button>
      </form>
      <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
        <span class="icon-[lucide--upload] size-5 text-primary"></span>
        <%= t("presets.import_title", default: "Import Preset") %>
      </h3>

      <%= form_with url: import_settings_presets_path, method: :post, multipart: true,
            id: "settings_preset_import_form",
            data: { controller: "preset-import" },
            class: "space-y-4" do |f| %>
        <%# Dropzone Area %>
        <div data-preset-import-target="zone"
             data-action="dragover->preset-import#dragover dragenter->preset-import#dragenter dragleave->preset-import#dragleave drop->preset-import#drop click->preset-import#click"
             class="border-2 border-dashed border-base-300 rounded-box p-8 text-center cursor-pointer hover:border-primary transition-colors">
          <div data-preset-import-target="idle">
            <span class="icon-[lucide--upload-cloud] size-12 text-base-content/30 mb-3 block mx-auto"></span>
            <p class="text-sm text-base-content/60"><%= t("presets.import_prompt", default: "Drop preset files here or click to browse") %></p>
            <p class="text-xs text-base-content/40 mt-1"><%= t("presets.import_formats", default: "Supports JSON format (TavernKit or SillyTavern)") %></p>
          </div>
          <div data-preset-import-target="uploading" class="hidden">
            <span class="loading loading-spinner loading-lg text-primary mb-3"></span>
            <p class="text-sm text-base-content/60"><%= t("presets.importing", default: "Importing...") %></p>
          </div>
        </div>

        <%= f.file_field :file,
              accept: ".json",
              multiple: true,
              class: "hidden",
              data: { preset_import_target: "input", action: "change->preset-import#fileSelected" } %>

        <%# Selected File Display %>
        <div data-preset-import-target="fileInfo" class="hidden alert alert-info">
          <span class="icon-[lucide--file] size-5"></span>
          <div>
            <p class="text-sm font-medium" data-preset-import-target="fileName"></p>
            <p class="text-xs opacity-70" data-preset-import-target="fileSize"></p>
          </div>
          <button type="button" class="btn btn-sm btn-ghost btn-circle" data-action="preset-import#clearFile">
            <span class="icon-[lucide--x] size-4"></span>
          </button>
        </div>

        <div class="modal-action">
          <button type="button" class="btn btn-ghost" data-controller="dialog" data-action="click->dialog#close">
            <%= t("common.cancel", default: "Cancel") %>
          </button>
          <button type="submit" class="btn btn-primary gap-2" data-preset-import-target="submitBtn" disabled>
            <span class="icon-[lucide--upload] size-4"></span>
            <%= t("presets.import", default: "Import") %>
          </button>
        </div>
      <% end %>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>

  <!-- Filter Bar -->
  <%= render "shared/filter_bar",
             path: :settings_presets_path,
             show_search: true,
             search_placeholder: t("presets.search_placeholder", default: "Search by name...") %>

  <!-- Presets List -->
  <div class="space-y-4">
    <% if @page.records.any? %>
      <% @page.records.each do |preset| %>
        <%= render "preset_card", preset: preset, default_preset: @default_preset %>
      <% end %>

      <%# Pagination %>
      <%= render "shared/pagination", page: @page, path_helper: :settings_presets_path, path_params: { filter: params[:filter], q: params[:q] } %>
    <% else %>
      <div class="card bg-base-200 p-8 text-center">
        <span class="icon-[lucide--sliders-horizontal] size-16 text-base-content/20 mx-auto mb-4"></span>
        <h3 class="text-lg font-medium text-base-content/60">
          <%= t("presets.empty_title", default: "No presets yet") %>
        </h3>
        <p class="text-base-content/40 max-w-md mx-auto mt-2">
          <%= t("presets.empty_description", default: "Create a new preset to save your LLM settings.") %>
        </p>
        <div class="flex justify-center gap-2 mt-4">
          <%= link_to new_settings_preset_path, class: "btn btn-primary gap-2" do %>
            <span class="icon-[lucide--plus] size-4"></span>
            <%= t("presets.new", default: "New Preset") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
