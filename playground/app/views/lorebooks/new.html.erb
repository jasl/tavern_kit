<%# New Lorebook Form %>
<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <%# Header %>
    <div class="mb-6">
      <%= link_to lorebooks_path, class: "btn btn-ghost btn-sm gap-2 mb-4" do %>
        <span class="icon-[lucide--arrow-left] size-4"></span>
        <%= t("lorebooks.back_to_list", default: "Back to Lorebooks") %>
      <% end %>
      <h1 class="text-2xl font-bold text-base-content">
        <%= t("lorebooks.new_title", default: "Create New Lorebook") %>
      </h1>
    </div>

    <div class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <%= render "form", lorebook: @lorebook %>
      </div>
    </div>
  </div>
</div>
