<% content_for :title, t("lorebook_entries.edit_title", default: "Edit Entry") %>
<% content_for :main_class, "flex-1 p-4 md:p-6 lg:p-8" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%# Breadcrumbs %>
  <div class="breadcrumbs text-sm">
    <ul>
      <li>
        <%= link_to lorebooks_path do %>
          <span class="icon-[lucide--book-open] size-4 mr-1"></span>
          <%= t("lorebooks.title", default: "Lorebooks") %>
        <% end %>
      </li>
      <li>
        <%= link_to edit_lorebook_path(@lorebook) do %>
          <%= @lorebook.name.truncate(20) %>
        <% end %>
      </li>
      <li><%= @entry.display_name.truncate(20) %></li>
    </ul>
  </div>

  <%# Back button %>
  <%= link_to edit_lorebook_path(@lorebook), class: "btn btn-ghost btn-sm gap-2 -mt-4 mb-2" do %>
    <span class="icon-[lucide--arrow-left] size-4"></span>
    <%= t("common.back_to_lorebook", default: "Back to Lorebook") %>
  <% end %>

  <%# Form %>
  <div class="card bg-base-100 shadow-sm border border-base-300">
    <div class="card-body">
      <%= render "form", entry: @entry, lorebook: @lorebook %>
    </div>
  </div>

  <%# Danger Zone %>
  <div class="card bg-base-100 shadow-sm border border-error/30">
    <div class="card-body">
      <h3 class="card-title text-error">
        <span class="icon-[lucide--alert-triangle] size-5"></span>
        <%= t("lorebook_entries.danger_zone", default: "Danger Zone") %>
      </h3>
      <p class="text-base-content/60 text-sm"><%= t("lorebook_entries.danger_description", default: "Once you delete an entry, there is no going back.") %></p>
      <div class="card-actions mt-4">
        <%= button_to lorebook_entry_path(@lorebook, @entry),
            method: :delete,
            class: "btn btn-error btn-outline gap-2",
            data: { turbo_confirm: t("lorebook_entries.delete_confirm", default: "Delete this entry?") } do %>
          <span class="icon-[lucide--trash-2] size-4"></span>
          <%= t("lorebook_entries.delete", default: "Delete Entry") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
