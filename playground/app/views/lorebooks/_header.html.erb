<%# Lorebook Settings Header %>
<%# locals: (lorebook:) %>
<%= form_with model: lorebook, class: "space-y-3", data: { turbo_frame: "lorebook_header" } do |f| %>
  <div class="form-control">
    <%= f.label :name, class: "label py-1" do %>
      <span class="label-text text-xs"><%= t("lorebooks.form.name", default: "Name") %></span>
    <% end %>
    <%= f.text_field :name, class: "input input-bordered input-sm", required: true %>
  </div>

  <div class="form-control">
    <%= f.label :description, class: "label py-1" do %>
      <span class="label-text text-xs"><%= t("lorebooks.form.description", default: "Description") %></span>
    <% end %>
    <%= f.text_area :description, class: "textarea textarea-bordered textarea-sm h-16", rows: 2 %>
  </div>

  <div class="grid grid-cols-2 gap-2">
    <div class="form-control">
      <%= f.label :scan_depth, class: "label py-1" do %>
        <span class="label-text text-xs"><%= t("lorebooks.form.scan_depth", default: "Scan Depth") %></span>
      <% end %>
      <%= f.number_field :scan_depth, class: "input input-bordered input-sm", min: 0, max: 1000 %>
    </div>

    <div class="form-control">
      <%= f.label :token_budget, class: "label py-1" do %>
        <span class="label-text text-xs"><%= t("lorebooks.form.token_budget", default: "Token Budget") %></span>
      <% end %>
      <%= f.number_field :token_budget, class: "input input-bordered input-sm", min: 0 %>
    </div>
  </div>

  <div class="form-control">
    <label class="label cursor-pointer justify-start gap-2 py-1">
      <%= f.check_box :recursive_scanning, class: "toggle toggle-primary toggle-sm" %>
      <span class="label-text text-xs"><%= t("lorebooks.form.recursive_scanning", default: "Recursive Scanning") %></span>
    </label>
  </div>

  <div class="flex justify-end">
    <%= f.submit t("common.save", default: "Save"), class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
