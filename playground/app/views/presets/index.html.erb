<% content_for :title, t("presets.title", default: "Presets") %>
<% content_for :main_class, "flex-1 p-4 md:p-6 lg:p-8" %>

<div class="max-w-7xl mx-auto">
  <%# Header %>
  <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-6">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-3">
        <span class="icon-[lucide--sliders-horizontal] size-7 text-primary"></span>
        <%= t("presets.title", default: "Presets") %>
      </h1>
      <p class="text-base-content/60 mt-1">
        <%= t("presets.subtitle", default: "Manage LLM generation and prompt settings presets") %>
      </p>
    </div>
    <%= link_to new_preset_path, class: "btn btn-primary gap-2" do %>
      <span class="icon-[lucide--plus] size-4"></span>
      <%= t("presets.new", default: "New Preset") %>
    <% end %>
  </div>

  <%# Filter bar %>
  <%= render "shared/filter_bar",
             path: :presets_path,
             show_search: false,
             show_tag_filter: false %>

  <%# Presets List %>
  <div class="space-y-4">
    <% if @page.records.any? %>
      <% @page.records.each do |preset| %>
        <%= render "preset_card", preset: preset, default_preset: @default_preset %>
      <% end %>

      <%# Pagination %>
      <%= render "shared/pagination", page: @page, path_helper: :presets_path, path_params: { filter: params[:filter] } %>
    <% else %>
      <%# Empty state %>
      <div class="card bg-base-200 p-8 text-center">
        <span class="icon-[lucide--sliders-horizontal] size-16 text-base-content/20 mx-auto mb-4"></span>
        <h3 class="text-lg font-medium text-base-content/60">
          <% if params[:filter].present? %>
            <%= t("presets.no_results", default: "No presets found") %>
          <% else %>
            <%= t("presets.empty_title", default: "No presets yet") %>
          <% end %>
        </h3>
        <p class="text-base-content/40 max-w-md mx-auto mt-2">
          <% if params[:filter].present? %>
            <%= t("presets.no_results_description", default: "Try adjusting your filters.") %>
          <% else %>
            <%= t("presets.empty_description", default: "Create a new preset to save your LLM settings.") %>
          <% end %>
        </p>
        <% unless params[:filter].present? %>
          <div class="flex justify-center gap-2 mt-4">
            <%= link_to new_preset_path, class: "btn btn-primary gap-2" do %>
              <span class="icon-[lucide--plus] size-4"></span>
              <%= t("presets.new", default: "New Preset") %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
