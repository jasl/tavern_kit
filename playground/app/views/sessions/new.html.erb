<% content_for :title, t("sessions.new.title") %>

<div class="min-h-dvh flex items-center justify-center p-4 relative">
  <%# Theme toggle in corner %>
  <label class="btn btn-ghost btn-sm btn-square swap swap-rotate absolute top-4 right-4" data-controller="theme">
    <input type="checkbox" data-theme-target="checkbox" data-action="change->theme#toggle" />
    <span class="icon-[lucide--sun] size-5 swap-off"></span>
    <span class="icon-[lucide--moon] size-5 swap-on"></span>
  </label>
  <div class="card bg-base-100 shadow-xl w-full max-w-md">
    <div class="card-body">
      <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 mb-4">
          <span class="icon-[lucide--log-in] size-8 text-primary"></span>
        </div>
        <h1 class="card-title text-2xl justify-center">
          <%= t("sessions.new.title") %>
        </h1>
        <p class="text-base-content/60 mt-2"><%= t("sessions.new.description") %></p>
      </div>

      <% if flash[:alert].present? %>
        <div role="alert" class="alert alert-error mb-4">
          <span class="icon-[lucide--circle-alert] size-5"></span>
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <%= form_with url: session_path, class: "space-y-4" do |form| %>
        <div class="form-control">
          <%= form.label :email, t("sessions.new.email"), class: "label" %>
          <%= form.email_field :email, 
              class: "input input-bordered w-full", 
              placeholder: t("sessions.new.email_placeholder"),
              required: true,
              autofocus: true,
              autocomplete: "email",
              value: params[:email] %>
        </div>

        <div class="form-control">
          <%= form.label :password, t("sessions.new.password"), class: "label" %>
          <%= form.password_field :password, 
              class: "input input-bordered w-full", 
              placeholder: t("sessions.new.password_placeholder"),
              required: true,
              autocomplete: "current-password" %>
        </div>

        <div class="form-control mt-6">
          <%= form.submit t("sessions.new.submit"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
