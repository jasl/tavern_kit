{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema://settings/root",
  "title": "TavernKit Playground Settings Schema (v0.6)",
  "description": "Root settings schema for TavernKit Playground.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "0.6.0",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$",
      "x-ui": {
        "label": "Schema Version",
        "control": "text",
        "quick": false,
        "order": 0
      },
      "description": "Schema Version"
    },
    "space": {
      "$ref": "defs/space.schema.json",
      "description": "space"
    },
    "participant": {
      "$ref": "defs/participant.schema.json",
      "description": "participant"
    },
    "character": {
      "$ref": "defs/character.schema.json",
      "description": "character"
    }
  },
  "required": [
    "version"
  ]
}
