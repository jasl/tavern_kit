{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema://settings/defs/character",
  "title": "Character Settings",
  "description": "Character card fields that influence prompt building (stored in Character#data).",
  "type": "object",
  "additionalProperties": true,
  "default": {},
  "x-ui": {
    "tab": "Character",
    "icon": "user",
    "order": 4
  },
  "properties": {
    "name": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "text",
        "label": "Name",
        "group": "Basics",
        "order": 1,
        "quick": true
      },
      "description": "Character name"
    },
    "description": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Description",
        "group": "Profile",
        "order": 10,
        "quick": false,
        "rows": 4
      },
      "description": "Character description"
    },
    "personality": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Personality",
        "group": "Profile",
        "order": 11,
        "quick": false,
        "rows": 4
      },
      "description": "Personality text"
    },
    "scenario": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Scenario",
        "group": "Profile",
        "order": 12,
        "quick": false,
        "rows": 3
      },
      "description": "Scenario/context"
    },
    "first_mes": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "First Message",
        "group": "Conversation",
        "order": 20,
        "quick": true,
        "rows": 5
      },
      "description": "Greeting shown as the first message"
    },
    "alternate_greetings": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string",
        "description": "alternate greeting item"
      },
      "maxItems": 16,
      "x-ui": {
        "control": "tags",
        "label": "Alternate Greetings",
        "group": "Conversation",
        "order": 21,
        "quick": false
      },
      "description": "Alternative greetings (used when greeting_index > 0)"
    },
    "mes_example": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Example Dialogue",
        "group": "Conversation",
        "order": 22,
        "quick": false,
        "rows": 6
      },
      "description": "Example dialogue (ST: mes_example)"
    },
    "system_prompt": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "System Prompt",
        "group": "Prompts",
        "order": 30,
        "quick": false,
        "rows": 6
      },
      "description": "Optional system prompt override"
    },
    "post_history_instructions": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Post-History Instructions",
        "group": "Prompts",
        "order": 31,
        "quick": false,
        "rows": 4
      },
      "description": "Optional post-history instructions override"
    },
    "depth_prompt": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Depth Prompt",
        "group": "Prompts",
        "order": 32,
        "quick": false,
        "rows": 4
      },
      "description": "Optional depth prompt (macro: {{charDepthPrompt}})"
    },
    "creator_notes": {
      "type": "string",
      "default": "",
      "x-ui": {
        "control": "textarea",
        "label": "Creator Notes",
        "group": "Notes",
        "order": 40,
        "quick": false,
        "rows": 4
      },
      "description": "Free-form notes (macro: {{creatorNotes}})"
    }
  }
}
